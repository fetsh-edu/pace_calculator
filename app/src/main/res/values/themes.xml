<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaceCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_500</item>
        <item name="colorPrimaryVariant">@color/amber_500_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnPrimaryHeader">@color/amber_500_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green_500</item>
        <item name="colorSecondaryVariant">@color/light_green_500_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:timePickerStyle">@style/spinner_time_picker</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.PaceCalculator.IconMenu.Item</item>
        <!-- Customize your theme here. -->
        <item name="popupMenuStyle">@style/Theme.PaceCalculator.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Theme.PaceCalculator.PopupMenu</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceLight">@color/lightTextColor</item>
        <item name="colorPopup">@color/white</item>
        <item name="colorOnTableRow">@color/black</item>
        <item name="colorDivider">@color/light_gray</item>

        <item name="colorTableRow">@color/lightestGray</item>
        <item name="colorTableRowAccent">@color/light_gray</item>

        <item name="colorPressedOverlay">@color/color_clicked</item>

        <item name="android:colorBackground">@color/lightestGray</item>
        <item name="colorOnBackground">?attr/colorOnPrimary</item>
    </style>
    <style name="Theme.PaceCalculator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.PaceCalculator.AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorPrimary">@color/amber_500_dark</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/amber_500_dark</item>
        <item name="colorControlActivated">@color/amber_500_dark</item>
        <!-- Used for the background -->
        <item name="android:buttonBarNegativeButtonStyle">@style/Widget.PaceCalculator.AlertDialogTheme</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Widget.PaceCalculator.AlertDialogTheme</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Widget.PaceCalculator.AlertDialogTheme</item>
    </style>
</resources>