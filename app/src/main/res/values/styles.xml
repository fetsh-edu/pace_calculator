<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="customMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/menu_item_text_color</item>
    </style>

    <style name="pace_speed">
        <item name="android:paddingLeft">@dimen/default_padding</item>
    </style>
    <style name="pace_speed_input" parent="pace_speed">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="pace_speed_header" parent="pace_speed">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>
    <style name="pace_speed_header_postfix" parent="pace_speed">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/lightTextColor</item>
    </style>
    <style name="spinner_time_picker">
        <item name="android:timePickerMode">spinner</item>
    </style>
    <style name="SpinnerTextViewItem">
        <item name="android:minWidth">70dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="split_table">
        <item name="android:background">@color/lightestGray</item>
    </style>

    <style name="split_row">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="before_spinner_edit_text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="general_input">
        <item name="android:background">@color/white</item>
    </style>
</resources>