<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pace_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/pace"
        style="@style/pace_speed_header"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pace_header_postfix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/pace_header"
        app:layout_constraintLeft_toRightOf="@id/pace_header"
        android:text="@string/pace_postfix"
        style="@style/pace_speed_header_postfix"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pace_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pace_header"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/pace_speed_input"
        tools:text="4.30"
        />

</androidx.constraintlayout.widget.ConstraintLayout>