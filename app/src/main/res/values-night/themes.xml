<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaceCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_gray_900</item>
        <item name="colorPrimaryVariant">@color/blue_gray_custom_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryHeader">@color/light_green_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green_500</item>
        <item name="colorSecondaryVariant">@color/light_green_500_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:timePickerStyle">@style/spinner_time_picker</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.PaceCalculator.IconMenu.Item</item>
        <!-- Customize your theme here. -->
        <item name="popupMenuStyle">@style/Theme.PaceCalculator.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Theme.PaceCalculator.PopupMenu</item>

        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceLight">@color/lightTextColor</item>
        <item name="colorPopup">@color/blue_gray_custom_lightest</item>
        <item name="colorOnTableRow">@color/lightTextColor</item>
        <item name="colorDivider">?attr/colorPrimary</item>

        <item name="colorTableRow">@color/blue_gray_custom_dark</item>
        <item name="colorTableRowAccent">@color/blue_gray_custom_light</item>

        <item name="colorPressedOverlay">@color/color_clicked_dark</item>

        <item name="android:colorBackground">@color/blue_gray_custom_dark</item>
        <item name="colorOnBackground">@color/light_gray</item>
    </style>
    <style name="Theme.PaceCalculator.AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorPrimary">@color/light_green_500</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/light_green_500</item>
        <item name="colorControlActivated">@color/light_green_500</item>
        <!-- Used for the background -->
        <item name="android:background">@color/blue_gray_900</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Widget.PaceCalculator.AlertDialogTheme</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Widget.PaceCalculator.AlertDialogTheme</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Widget.PaceCalculator.AlertDialogTheme</item>
    </style>
</resources>